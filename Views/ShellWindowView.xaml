<Window x:Class="DocumentHQ.Views.ShellWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentHQ.Views"
        xmlns:uc="clr-namespace:DocumentHQ.Views.UserControls"
        xmlns:vm="clr-namespace:DocumentHQ.ViewModels"
        mc:Ignorable="d"
        WindowStyle="None"        
        Title="DocumentHQ" Height="450" Width="800"
        ResizeMode="CanResizeWithGrip" AllowsTransparency="True"
        Background="#ffeaa7">

    <Window.Resources>
        <vm:ShellViewModel x:Key="shellVM"/>
    </Window.Resources>
    <Grid>
        <!--All dock panel items can access shellVM commands-->
        <DockPanel DataContext="{StaticResource shellVM}">
            <!--Window controls and menu items-->
            <Grid HorizontalAlignment="Stretch"
                  DockPanel.Dock="Top"
                  Background="#e17055"
                  MouseDown="Border_MouseDown"
                  Margin="0,-3,0,0">


                <!--window controls and menu-->
                <StackPanel HorizontalAlignment="Left"
                            Orientation="Horizontal" >
                    <Label Content="DocumentHQ"
                           Foreground="#ffeaa7"
                           FontWeight="SemiBold"/>
                    <Menu Background="#e17055"
                          BorderThickness="0"
                          VerticalAlignment="Center">
                        <MenuItem Header="File"
                                  Background="#e17055">
                            <MenuItem Header="New Semester"
                                      Command="{Binding NewSemesterCommand}"/>
                            <!---->
                            <MenuItem Header="New Course"
                                      Command="{Binding NewCourseCommand}"
                                      CommandParameter="{Binding SelectedSemester}"/>
                            <MenuItem Header="Save"
                                      Click="Save_Click"/>
                            <Separator/>
                            <MenuItem Header="Exit"
                                      Click="CloseButton_Click"/>
                        </MenuItem>
                        <MenuItem Header="Edit">
                            <MenuItem Header="Edit Course Info"/>
                            <MenuItem Header="Delete Semester"
                                      Command="{Binding DelSemesterCommand}"
                                      CommandParameter="{Binding SelectedSemester}"/>
                            <MenuItem Header="Delete Course"
                                      Command="{Binding DelCourseCommand}"
                                      CommandParameter="{Binding SelectedCourse}"/>
                            <MenuItem Header="Delete Shortcut"
                                      Command="{Binding DelLinkCommand}"
                                      CommandParameter="{Binding SelectedShortCut}"/>
                            <MenuItem Header="Delete Book"
                                      Command="{Binding DelBookCommand}"
                                      CommandParameter="{Binding SelectedBook}"/>
                        </MenuItem>
                        <MenuItem Header="View">
                            <MenuItem Header="Course View"/>
                            <MenuItem Header="Schedule View"/>
                        </MenuItem>

                    </Menu>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Button Width="20"
                            Height="20"
                            Content="🗕"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#ffeaa7"
                            FontWeight="Bold"
                            Click="ButtonMinimize_Click"/>

                    <Button Width="20"
                            Height="20"
                            Content="🗖"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#ffeaa7"
                            FontWeight="Bold"
                            Click="ButtonMaximize_Click" />

                    <Button Width="20"
                            Height="20"
                            Content="X"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#ffeaa7"
                            FontWeight="Bold"
                            Click="CloseButton_Click"/>


                </StackPanel>


            </Grid>
